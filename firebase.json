{
  "firestore": {
    "rules": "./firestore.rules",
    "indexes": "./firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": "4000"
    },
    "auth": {
      "host": "localhost",
      "port": "51000"
    },
    "functions": {
      "port": 9099
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  }
}